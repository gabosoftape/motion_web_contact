<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="op_categ_list">
      <field name="name">Lista Categoria oportunidades</field>
      <field name="model">motion.crm_motion_op_categ</field>
      <field name="arch" type="xml">
        <tree>
            <field name="categoria"/>
            <field name="descripcion"/>
        </tree>
      </field>
    </record>
    <!-- formulario alistamientos-->

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="op_categ_motion_action_window">
        <field name="name">Categorias</field>
        <field name="res_model">motion.crm_motion_op_categ</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="op_categ_list"/>
    </record>

     <record id="category_op_search" model="ir.ui.view">
        <field name="name">Category Oportunities search</field>
        <field name="model">motion.crm_motion_op_categ</field>
        <field name="arch" type="xml">
            <search string="Categoria">
                <field name="categoria" />
                <field name="descripcion"/>
            </search>
        </field>
    </record>
    <!-- actions -->
    <menuitem name="Categorias" id="menu_admin_op_categories" parent="contact_menu_1" action="op_categ_motion_action_window" sequence="3"/>
  </data>
</odoo>