<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="oportunities_list">
      <field name="name">Lista Oportunidades</field>
      <field name="model">motion.crm_motion_oportunities</field>
      <field name="arch" type="xml">
        <tree>
            <field name="empresa" />
            <field name="categoria"/>
            <field name="contacto"/>
            <field name="cargo"/>
            <field name="correo"/>
            <field name="tel1"/>
            <field name="tel2"/>
            <field name="direccion"/>
            <field name="comentarios"/>
        </tree>
      </field>
    </record>
    <!-- formulario alistamientos-->

    <record id="oportunities_form" model="ir.ui.view">
            <field name="name">Formulario Oportunidad</field>
            <field name="model">motion.crm_motion_oportunities</field>
            <field name="arch" type="xml">
                <form string="Contacto Oportuno" attrs="{'readonly':[('state','=','concretado')]}">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                    <sheet>
                         <group string="Formulario de prospectos">
                            <field name="fecha" />
                            <field name="empresa" />
                            <field name="categoria"/>
                            <field name="contacto"/>
                            <field name="cargo"/>
                            <field name="correo"/>
                            <field name="tel1"/>
                            <field name="tel2"/>
                            <field name="direccion"/>
                            <field name="comentarios"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="oportunities_motion_action_window">
        <field name="name">Oportunidades</field>
        <field name="res_model">motion.crm_motion_oportunities</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="oportunities_list"/>
    </record>

     <record id="contact_search" model="ir.ui.view">
        <field name="name">Oportunities serch</field>
        <field name="model">motion.crm_motion_oportunities</field>
        <field name="arch" type="xml">
            <search string="Contacto">
                <field name="empresa" />
                <field name="tel1"/>
                <field name="tel2"/>
                <field name="correo"/>
            </search>
        </field>
    </record>
    <!-- actions -->
    <menuitem name="Oportunidades" id="menu_admin_oportunities" parent="contact_menu_1" action="oportunities_motion_action_window" sequence="2"/>
  </data>
</odoo>